<div>
  <div>
    <h1>
      Municipality #<%= @the_municipality.id %> details
    </h1>

    <div>
      <div>
        <a href="/municipalities">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_municipality/<%= @the_municipality.id %>">
          Delete municipality
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_municipality.name %>
      </dd>

      <dt>
        District
      </dt>
      <dd>
        <%= @the_municipality.district_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_municipality.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_municipality.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit municipality
    </h2>

    <form action="/modify_municipality/<%= @the_municipality.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_municipality.name %>">
      </div>

      <div>
        <label for="district_id_box">
          District
        </label>

        <input type="text" id="district_id_box" name="query_district_id" value="<%= @the_municipality.district_id %>">
      </div>

      <button>
        Update municipality
      </button>
    </form>
  </div>
</div>

<hr>
