<div>
  <div>
    <h1>
      List of all statuses
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new status
    </h2>

    <form action="/insert_status" method="post">
      <div>
        <label for="status_type_box">
          Status type
        </label>

        <input type="text" id="status_type_box" name="query_status_type">
      </div>

      <div>
        <label for="person_type_box">
          Person type
        </label>

        <input type="text" id="person_type_box" name="query_person_type">
      </div>

      <div>
        <input type="checkbox" id="remark_box" name="query_remark" value="1">

        <label for="remark_box">Remark</label>
      </div>

      <button>
        Create status
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Status type
        </th>

        <th>
          Person type
        </th>

        <th>
          Remark
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_statuses.each do |a_status| %>
      <tr>
        <td>
          <%= a_status.id %>
        </td>

        <td>
          <%= a_status.status_type %>
        </td>

        <td>
          <%= a_status.person_type %>
        </td>

        <td>
          <%= a_status.remark %>
        </td>

        <td>
          <%= time_ago_in_words(a_status.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_status.updated_at) %> ago
        </td>

        <td>
          <a href="/statuses/<%= a_status.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
