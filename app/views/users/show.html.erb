      </dt>
      <dd>
        <%= @the_user.permission_name %>
      </dd>

      <dt>
        Permission photo
      </dt>
      <dd>
        <%= @the_user.permission_photo %>
      </dd>

      <dt>
        Permission story
      </dt>
      <dd>
        <%= @the_user.permission_story %>
      </dd>

      <dt>
        Permission media
      </dt>
      <dd>
        <%= @the_user.permission_media %>
      </dd>

      <dt>
