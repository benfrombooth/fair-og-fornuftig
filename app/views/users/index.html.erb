<div>
  <div>
    <h1>
      List of all users
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new user
    </h2>

    <form action="/insert_user" method="post">
      <div>
        <label for="status_id_box">
          Status
        </label>

        <input type="text" id="status_id_box" name="query_status_id">
      </div>

      <div>
        <label for="identification_id_box">
          Identification
        </label>

        <input type="text" id="identification_id_box" name="query_identification_id">
      </div>

      <div>
        <label for="residency_id_box">
          Residency
        </label>

        <input type="text" id="residency_id_box" name="query_residency_id">
      </div>

      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name">
      </div>

      <div>
        <label for="arrival_year_box">
          Arrival year
        </label>

        <input type="date" id="arrival_year_box" name="query_arrival_year">
      </div>

      <div>
        <label for="nationality_box">
          Nationality
        </label>

        <input type="text" id="nationality_box" name="query_nationality">
      </div>

      <div>
        <label for="email_box">
          Email
        </label>

        <input type="text" id="email_box" name="query_email">
      </div>

      <div>
        <label for="industry_id_box">
          Industry
        </label>

        <input type="text" id="industry_id_box" name="query_industry_id">
      </div>

      <div>
        <label for="anonymity_id_box">
          Anonymity
        </label>

        <input type="text" id="anonymity_id_box" name="query_anonymity_id">
      </div>

      <div>
        <label for="municipality_id_box">
          Municipality
        </label>

        <input type="text" id="municipality_id_box" name="query_municipality_id">
      </div>

      <div>
        <input type="checkbox" id="integration_survey_box" name="query_integration_survey" value="1">

        <label for="integration_survey_box">Integration survey</label>
      </div>

      <div>
        <input type="checkbox" id="integration_result_box" name="query_integration_result" value="1">

        <label for="integration_result_box">Integration result</label>
      </div>

      <div>
        <label for="permanent_residency_survey_box">
          Permanent residency survey
        </label>

        <input type="text" id="permanent_residency_survey_box" name="query_permanent_residency_survey">
      </div>

      <div>
        <input type="checkbox" id="permanent_residency_result_box" name="query_permanent_residency_result" value="1">

        <label for="permanent_residency_result_box">Permanent residency result</label>
      </div>

      <div>
        <label for="volunteer_team_id_box">
          Volunteer team
        </label>

        <input type="text" id="volunteer_team_id_box" name="query_volunteer_team_id">
      </div>

      <div>
        <label for="phone_box">
          Phone
        </label>

        <input type="text" id="phone_box" name="query_phone">
      </div>

      <div>
        <label for="personal_story_box">
          Personal story
        </label>

        <input type="text" id="personal_story_box" name="query_personal_story">
      </div>

      <button>
        Create user
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Status
        </th>

        <th>
          Identification
        </th>

        <th>
          Residency
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Arrival year
        </th>

        <th>
          Nationality
        </th>

        <th>
          Email
        </th>

        <th>
          Industry
        </th>

        <th>
          Anonymity
        </th>

        <th>
          Municipality
        </th>

        <th>
          Integration survey
        </th>

        <th>
          Integration result
        </th>

        <th>
          Permanent residency survey
        </th>

        <th>
          Permanent residency result
        </th>

        <th>
          Volunteer team
        </th>

        <th>
          Phone
        </th>

        <th>
          Personal story
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.id %>
        </td>

        <td>
          <%= a_user.status_id %>
        </td>

        <td>
          <%= a_user.identification_id %>
        </td>

        <td>
          <%= a_user.residency_id %>
        </td>

        <td>
          <%= a_user.first_name %>
        </td>

        <td>
          <%= a_user.last_name %>
        </td>

        <td>
          <%= a_user.arrival_year %>
        </td>

        <td>
          <%= a_user.nationality %>
        </td>

        <td>
          <%= a_user.email %>
        </td>

        <td>
          <%= a_user.industry_id %>
        </td>

        <td>
          <%= a_user.anonymity_id %>
        </td>

        <td>
          <%= a_user.municipality_id %>
        </td>

        <td>
          <%= a_user.integration_survey %>
        </td>

        <td>
          <%= a_user.integration_result %>
        </td>

        <td>
          <%= a_user.permanent_residency_survey %>
        </td>

        <td>
          <%= a_user.permanent_residency_result %>
        </td>

        <td>
          <%= a_user.volunteer_team_id %>
        </td>

        <td>
          <%= a_user.phone %>
        </td>

        <td>
          <%= a_user.personal_story %>
        </td>

        <td>
          <%= time_ago_in_words(a_user.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_user.updated_at) %> ago
        </td>

        <td>
          <a href="/users/<%= a_user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
