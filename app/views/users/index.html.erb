<div>
  <div>
    <h1>
      List of all users
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new user
    </h2>

    <form action="/insert_user" method="post">
      <div>
        <label for="residency_id_box">
          Residency
        </label>

        <input type="text" id="residency_id_box" name="query_residency_id">
      </div>

      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name">
      </div>

      <div>
        <label for="nationality_box">
          Nationality
        </label>

        <input type="text" id="nationality_box" name="query_nationality">
      </div>

      <div>
        <label for="username_box">
          Username
        </label>

        <input type="text" id="username_box" name="query_username">
      </div>

      <div>
        <label for="industry_id_box">
          Industry
        </label>

        <input type="text" id="industry_id_box" name="query_industry_id">
      </div>

      <div>
        <label for="anonymity_id_box">
          Anonymity
        </label>

        <input type="text" id="anonymity_id_box" name="query_anonymity_id">
      </div>

      <div>
        <label for="municipality_id_box">
          Municipality
        </label>

        <input type="text" id="municipality_id_box" name="query_municipality_id">
      </div>

      <div>
        <label for="personal_story_box">
          Personal story
        </label>

        <input type="text" id="personal_story_box" name="query_personal_story">
      </div>

      <div>
        <label for="photo_box">
          Photo
        </label>

        <input type="text" id="photo_box" name="query_photo">
      </div>

      <button>
        Create user
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Residency
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Nationality
        </th>

        <th>
          Username
        </th>

        <th>
          Industry
        </th>

        <th>
          Anonymity
        </th>

        <th>
          Municipality
        </th>

        <th>
          Personal story
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.id %>
        </td>

        <td>
          <%= a_user.residency_id %>
        </td>

        <td>
          <%= a_user.first_name %>
        </td>

        <td>
          <%= a_user.last_name %>
        </td>

        <td>
          <%= a_user.nationality %>
        </td>

        <td>
          <%= a_user.username %>
        </td>

        <td>
          <%= a_user.industry_id %>
        </td>

        <td>
          <%= a_user.anonymity_id %>
        </td>

        <td>
          <%= a_user.municipality_id %>
        </td>

        <td>
          <%= a_user.personal_story %>
        </td>

        <td>
          <%= a_user.photo %>
        </td>

        <td>
          <%= time_ago_in_words(a_user.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_user.updated_at) %> ago
        </td>

        <td>
          <a href="/users/<%= a_user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
