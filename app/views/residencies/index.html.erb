<div>
  <div>
    <h1>
      List of all residencies
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new residency
    </h2>

    <form action="/insert_residency" method="post">
      <div>
        <label for="residency_type_box">
          Residency type
        </label>

        <input type="text" id="residency_type_box" name="query_residency_type">
      </div>

      <div>
        <label for="residency_status_box">
          Residency status
        </label>

        <input type="text" id="residency_status_box" name="query_residency_status">
      </div>

      <button>
        Create residency
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Residency type
        </th>

        <th>
          Residency status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_residencies.each do |a_residency| %>
      <tr>
        <td>
          <%= a_residency.id %>
        </td>

        <td>
          <%= a_residency.residency_type %>
        </td>

        <td>
          <%= a_residency.residency_status %>
        </td>

        <td>
          <%= time_ago_in_words(a_residency.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_residency.updated_at) %> ago
        </td>

        <td>
          <a href="/residencies/<%= a_residency.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
