<div>
  <div>
    <h1>
      Politician #<%= @the_politician.id %> details
    </h1>

    <div>
      <div>
        <a href="/politicians">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_politician/<%= @the_politician.id %>">
          Delete politician
        </a>
      </div>
    </div>

    <dl>
      <dt>
        District
      </dt>
      <dd>
        <%= @the_politician.district_id %>
      </dd>

      <dt>
        Party
      </dt>
      <dd>
        <%= @the_politician.party %>
      </dd>

      <dt>
        Year elected
      </dt>
      <dd>
        <%= @the_politician.year_elected %>
      </dd>

      <dt>
        Status
      </dt>
      <dd>
        <%= @the_politician.status_id %>
      </dd>

      <dt>
        First name
      </dt>
      <dd>
        <%= @the_politician.first_name %>
      </dd>

      <dt>
        Last name
      </dt>
      <dd>
        <%= @the_politician.last_name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_politician.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_politician.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit politician
    </h2>

    <form action="/modify_politician/<%= @the_politician.id %>"  method="post" >
      <div>
        <label for="district_id_box">
          District
        </label>

        <input type="text" id="district_id_box" name="query_district_id" value="<%= @the_politician.district_id %>">
      </div>

      <div>
        <label for="party_box">
          Party
        </label>

        <input type="text" id="party_box" name="query_party" value="<%= @the_politician.party %>">
      </div>

      <div>
        <label for="year_elected_box">
          Year elected
        </label>

        <input type="text" id="year_elected_box" name="query_year_elected" value="<%= @the_politician.year_elected %>">
      </div>

      <div>
        <label for="status_id_box">
          Status
        </label>

        <input type="text" id="status_id_box" name="query_status_id" value="<%= @the_politician.status_id %>">
      </div>

      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name" value="<%= @the_politician.first_name %>">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name" value="<%= @the_politician.last_name %>">
      </div>

      <button>
        Update politician
      </button>
    </form>
  </div>
</div>

<hr>
