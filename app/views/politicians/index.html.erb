<div>
  <div>
    <h1>
      List of all politicians
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new politician
    </h2>

    <form action="/insert_politician" method="post">
      <div>
        <label for="district_id_box">
          District
        </label>

        <input type="text" id="district_id_box" name="query_district_id">
      </div>

      <div>
        <label for="party_box">
          Party
        </label>

        <input type="text" id="party_box" name="query_party">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="photo_box">
          Photo
        </label>

        <input type="text" id="photo_box" name="query_photo">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name">
      </div>

      <div>
        <input type="checkbox" id="spokesperson_box" name="query_spokesperson" value="1">

        <label for="spokesperson_box">Spokesperson</label>
      </div>

      <div>
        <label for="username_box">
          Username
        </label>

        <input type="text" id="username_box" name="query_username">
      </div>

      <button>
        Create politician
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          District
        </th>

        <th>
          Party
        </th>

        <th>
          Name
        </th>

        <th>
          Photo
        </th>

        <th>
          Last name
        </th>

        <th>
          Spokesperson
        </th>

        <th>
          Username
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_politicians.each do |a_politician| %>
      <tr>
        <td>
          <%= a_politician.id %>
        </td>

        <td>
          <%= a_politician.district_id %>
        </td>

        <td>
          <%= a_politician.party %>
        </td>

        <td>
          <%= a_politician.name %>
        </td>

        <td>
          <%= a_politician.photo %>
        </td>

        <td>
          <%= a_politician.last_name %>
        </td>

        <td>
          <%= a_politician.spokesperson %>
        </td>

        <td>
          <%= a_politician.username %>
        </td>

        <td>
          <%= time_ago_in_words(a_politician.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_politician.updated_at) %> ago
        </td>

        <td>
          <a href="/politicians/<%= a_politician.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
