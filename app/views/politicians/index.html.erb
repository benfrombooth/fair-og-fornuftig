<div>
  <div>
    <h1>
      List of all politicians
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new politician
    </h2>

    <form action="/insert_politician" method="post">
      <div>
        <label for="district_id_box">
          District
        </label>

        <input type="text" id="district_id_box" name="query_district_id">
      </div>

      <div>
        <label for="party_box">
          Party
        </label>

        <input type="text" id="party_box" name="query_party">
      </div>

      <div>
        <label for="year_elected_box">
          Year elected
        </label>

        <input type="text" id="year_elected_box" name="query_year_elected">
      </div>

      <div>
        <label for="status_id_box">
          Status
        </label>

        <input type="text" id="status_id_box" name="query_status_id">
      </div>

      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name">
      </div>

      <button>
        Create politician
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          District
        </th>

        <th>
          Party
        </th>

        <th>
          Year elected
        </th>

        <th>
          Status
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_politicians.each do |a_politician| %>
      <tr>
        <td>
          <%= a_politician.id %>
        </td>

        <td>
          <%= a_politician.district_id %>
        </td>

        <td>
          <%= a_politician.party %>
        </td>

        <td>
          <%= a_politician.year_elected %>
        </td>

        <td>
          <%= a_politician.status_id %>
        </td>

        <td>
          <%= a_politician.first_name %>
        </td>

        <td>
          <%= a_politician.last_name %>
        </td>

        <td>
          <%= time_ago_in_words(a_politician.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_politician.updated_at) %> ago
        </td>

        <td>
          <a href="/politicians/<%= a_politician.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
