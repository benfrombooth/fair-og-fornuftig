<div>
  <div>
    <h1>
      List of all politicians
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new politician
    </h2>

    <form action="/insert_politician" method="post">
      <div>
        <label for="district_id_box">
          District
        </label>

        <input type="text" id="district_id_box" name="query_district_id">
      </div>

      <div>
        <label for="party_box">
          Party
        </label>

        <input type="text" id="party_box" name="query_party">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="photo_box">
          Photo
        </label>

        <input type="text" id="photo_box" name="query_photo">
      </div>

      <div>
        <label for="spokesperson_box">
          Spokesperson
        </label>

        <input type="text" id="spokesperson_box" name="query_spokesperson">
      </div>

      <div>
        <label for="status_id_box">
          Status
        </label>

        <input type="text" id="status_id_box" name="query_status_id">
      </div>

      <div>
        <label for="priority_box">
          Priority
        </label>

        <input type="text" id="priority_box" name="query_priority">
      </div>

      <div>
        <label for="total_sentiment_score_box">
          Total sentiment score
        </label>

        <input type="text" id="total_sentiment_score_box" name="query_total_sentiment_score">
      </div>

      <button>
        Create politician
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          District
        </th>

        <th>
          Party
        </th>

        <th>
          Name
        </th>

        <th>
          Photo
        </th>

        <th>
          Spokesperson
        </th>

        <th>
          Status
        </th>

        <th>
          Priority
        </th>

        <th>
          Total sentiment score
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_politicians.each do |a_politician| %>
      <tr>
        <td>
          <%= a_politician.id %>
        </td>

        <td>
          <%= a_politician.district_id %>
        </td>

        <td>
          <%= a_politician.party %>
        </td>

        <td>
          <%= a_politician.name %>
        </td>

        <td>
          <%= a_politician.photo %>
        </td>

        <td>
          <%= a_politician.spokesperson %>
        </td>

        <td>
          <%= a_politician.status_id %>
        </td>

        <td>
          <%= a_politician.priority %>
        </td>

        <td>
          <%= a_politician.total_sentiment_score %>
        </td>

        <td>
          <%= time_ago_in_words(a_politician.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_politician.updated_at) %> ago
        </td>

        <td>
          <a href="/politicians/<%= a_politician.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
