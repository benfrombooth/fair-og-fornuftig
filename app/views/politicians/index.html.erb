<div>
  <div>
    <h1>
      List of all politicians
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          District
        </th>

        <th>
          Party
        </th>

        <th>
          Name
        </th>

        <th>
          Photo
        </th>

        <th>
          Spokesperson
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_politicians.each do |a_politician| %>
      <tr>
        <td>
          <%= a_politician.id %>
        </td>

        <td>
          <%= a_politician.district_id %>
        </td>

        <td>
          <%= a_politician.party %>
        </td>

        <td>
          <%= a_politician.name %>
        </td>

        <td>
          <img src=<%= a_politician.photo %>>
        </td>

        <td>
          <%= a_politician.spokesperson %>
        </td>

        <td>
          
          <% if a_politician.status_id == 5 %>
            Ally
          <% elsif a_politician.status_id == 4 %>
            Supporter
          <% elsif a_politician.status_id == 3 %>
            Sympathizer
          <% elsif a_politician.status_id == 2 %>
            Bystander
          <% else a_politician.status_id == 1 %>
            Opponent
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(a_politician.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_politician.updated_at) %> ago
        </td>

        <td>
          <a href="/politicians/<%= a_politician.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
