<div>
  <div>
    <h1>
      <%= @current_member.first_name %>'s bookmarks
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Follow a new politician
    </h2>

    <form action="/insert_bookmark" method="post">

      <div>
        <label for="politician_id_box">
          Politician
        </label>

      <select name="query_politician_id">
        <% Politician.all.order(:party).each do |a_politician| %>
          <option value="<%= a_politician.id %>">
            <%= a_politician.name %>
          </option>
        <% end %>
      </select>

      </div>

      <button>
        Follow this politician!
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Politician
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_bookmarks.each do |a_bookmark| %>
      <tr>
 
        <td>
          <%= a_bookmark.politician.name %>
        </td>

        <td>
          <%= time_ago_in_words(a_bookmark.created_at) %> ago
        </td>

        <td>
          <a href="/delete_bookmark/<%= a_bookmark.id %>">
            Un-follow
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>