<div>
  <div>
    <h1>
      Policy #<%= @the_policy.id %> details
    </h1>

    <div>
      <div>
        <a href="/policies">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_policy/<%= @the_policy.id %>">
          Delete policy
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Description
      </dt>
      <dd>
        <%= @the_policy.description %>
      </dd>

      <dt>
        Low sentiment
      </dt>
      <dd>
        <%= @the_policy.low_sentiment %>
      </dd>

      <dt>
        High sentiment
      </dt>
      <dd>
        <%= @the_policy.high_sentiment %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_policy.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_policy.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit policy
    </h2>

    <form action="/modify_policy/<%= @the_policy.id %>"  method="post" >
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description" value="<%= @the_policy.description %>">
      </div>

      <div>
        <label for="low_sentiment_box">
          Low sentiment
        </label>

        <input type="text" id="low_sentiment_box" name="query_low_sentiment" value="<%= @the_policy.low_sentiment %>">
      </div>

      <div>
        <label for="high_sentiment_box">
          High sentiment
        </label>

        <input type="text" id="high_sentiment_box" name="query_high_sentiment" value="<%= @the_policy.high_sentiment %>">
      </div>

      <button>
        Update policy
      </button>
    </form>
  </div>
</div>

<hr>
