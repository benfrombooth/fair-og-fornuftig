<div>
  <h1>
    Learn about broken policies
  </h1>
<div>
 
<hr>

<div>
  <h3>
    List of policies and impacts
  </h3>
<div>

<table id="policies">
  <tr>
    <th>
      Policy #
    </th>
    <th>
      Description
    </th>
    <th>
      Value
    </th>
    <th>
      Injustice
    </th>
    <th>
      # Examples (still in testing!)
    </th>
  </tr>

  <% @list_of_policies.each_with_index do |the_policy, the_index| %>
    <tr>
      <td>
        <%= the_index %>  
      </td>
      <td>
        <%= the_policy.description %>
      </td>
      <td>
        <%= the_policy.value.description %>.
      </td>
      <td>
        <strong><%= the_policy.injustice.description %></strong>
      </td>
      <td>
        <%= the_policy.examples.count %>
      </td>  
    </tr>
  <% end%>
</table>
