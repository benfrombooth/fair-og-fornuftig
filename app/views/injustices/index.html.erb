<div>
  <div>
    <h1>
      List of all injustices
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new injustice
    </h2>

    <form action="/insert_injustice" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="injustice_type_box">
          Injustice type
        </label>

        <input type="text" id="injustice_type_box" name="query_injustice_type">
      </div>

      <div>
        <label for="policy_id_box">
          Policy
        </label>

        <input type="text" id="policy_id_box" name="query_policy_id">
      </div>

      <div>
        <label for="value_id_box">
          Value
        </label>

        <input type="text" id="value_id_box" name="query_value_id">
      </div>

      <button>
        Create injustice
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Injustice type
        </th>

        <th>
          Policy
        </th>

        <th>
          Value
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_injustices.each do |an_injustice| %>
      <tr>
        <td>
          <%= an_injustice.id %>
        </td>

        <td>
          <%= an_injustice.description %>
        </td>

        <td>
          <%= an_injustice.injustice_type %>
        </td>

        <td>
          <%= an_injustice.policy_id %>
        </td>

        <td>
          <%= an_injustice.value_id %>
        </td>

        <td>
          <%= time_ago_in_words(an_injustice.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_injustice.updated_at) %> ago
        </td>

        <td>
          <a href="/injustices/<%= an_injustice.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
