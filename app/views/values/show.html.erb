<div>
  <div>
    <h1>
      Value #<%= @the_value.id %> details
    </h1>

    <div>
      <div>
        <a href="/values">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_value/<%= @the_value.id %>">
          Delete value
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_value.name %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @the_value.description %>
      </dd>

      <dt>
        Photo
      </dt>
      <dd>
        <%= @the_value.photo %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_value.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_value.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit value
    </h2>

    <form action="/modify_value/<%= @the_value.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_value.name %>">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description" value="<%= @the_value.description %>">
      </div>

      <div>
        <label for="photo_box">
          Photo
        </label>

        <input type="text" id="photo_box" name="query_photo" value="<%= @the_value.photo %>">
      </div>

      <button>
        Update value
      </button>
    </form>
  </div>
</div>

<hr>
