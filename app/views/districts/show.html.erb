<div>
  <div>
    <h1>
      District #<%= @the_district.id %> details
    </h1>

    <div>
      <div>
        <a href="/districts">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_district/<%= @the_district.id %>">
          Delete district
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_district.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_district.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_district.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit district
    </h2>

    <form action="/modify_district/<%= @the_district.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_district.name %>">
      </div>

      <button>
        Update district
      </button>
    </form>
  </div>
</div>

<hr>
