<div >
  <h5>
    Edit Member Account
  </h5>

  <div>
    <form action="/modify_member" method="post">
      <div>
        <label for="username_box">Username</label>
        <input id="username_box" name="query_username" value="<%= @current_member.username %>">
      </div>
      <div>
        <label for="first_name_box">First name</label>
        <input id="first_name_box" name="query_first_name" value="<%= @current_member.first_name %>">
      </div>
      <div>
        <label for="last_name_box">Last name</label>
        <input id="last_name_box" name="query_last_name" value="<%= @current_member.last_name %>">
      </div>
      <div>
        <label for="string_box">String</label>
        <input id="string_box" name="query_string" value="<%= @current_member.string %>">
      </div>

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
